# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Authentication
AUTH_SECRET=dev-secret-key-change-in-production-32-chars
AUTH_TRUST_HOST=true

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev@example.com
SMTP_PASSWORD=dev-password

# S3
S3_BUCKET=dev-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=dev-access-key
S3_SECRET_ACCESS_KEY=dev-secret-key
# Optional S3-compatible endpoint (e.g., Cloudflare R2)
S3_ENDPOINT=
# Set to "true" for path-style addressing with some S3-compatible providers
S3_FORCE_PATH_STYLE=false

# Redis
REDIS_URL=redis://localhost:6379

# API
API_KEY=dev-api-key-change-in-production

# Environment
NODE_ENV=development
